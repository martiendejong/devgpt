<Window x:Class="NewWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Embeddings Bestanden Lader" Height="400" Width="400">
    <DockPanel Margin="10">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Bestand">
                <MenuItem Header="Open embeddingsbestand..." Click="MenuOpenEmbeddingsbestand_Click" />
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button x:Name="BtnOpenFile" Content="Open embeddings bestand..." Width="200" Height="32" Margin="0,0,0,8" HorizontalAlignment="Left" Click="BtnOpenFile_Click"/>
            <TextBlock x:Name="TxtStatus" Foreground="DarkGray" Height="24"/>
        </StackPanel>
        <GroupBox Header="Bestandsnamen" DockPanel.Dock="Bottom">
            <ListBox x:Name="ListFiles" FontFamily="Consolas" FontSize="14"/>
        </GroupBox>
    </DockPanel>
</Window>
