<Window x:Class="DevGPT.ExplorerIntegration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DevGPT Explorer Integration" Height="220" Width="520">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="DevGPT Explorer Integration" FontSize="16" FontWeight="Bold"/>

        <StackPanel Grid.Row="1" Margin="0,12,0,0">
            <TextBlock Text="Target Folder:"/>
            <TextBox x:Name="FolderBox" IsReadOnly="True" Margin="0,4,0,8"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="EmbedButton" Content="Embed Files" Width="120" Click="EmbedButton_Click" Margin="0,0,8,0"/>
                <Button x:Name="ChatButton" Content="Start Chat" Width="120" Click="ChatButton_Click"/>
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="2" x:Name="StatusText" Margin="0,12,0,0"/>
    </Grid>
</Window>

