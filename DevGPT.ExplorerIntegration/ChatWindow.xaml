<Window x:Class="DevGPT.ExplorerIntegration.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DevGPT Chat" Height="520" Width="720" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,8">
            <Button Content="âš™ Settings" Width="100" Click="Settings_Click" HorizontalAlignment="Right"/>
        </DockPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="MessagesPanel"/>
        </ScrollViewer>

        <DockPanel Grid.Row="2" LastChildFill="True" Margin="0,8,0,0">
            <Button Content="Send" Width="100" Margin="8,0,0,0" Click="Send_Click" DockPanel.Dock="Right"/>
            <TextBox x:Name="InputBox" AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>
        </DockPanel>
    </Grid>
</Window>

