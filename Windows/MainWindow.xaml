<Window x:Class="DevGPT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:local="clr-namespace:DevGPT"
        Title="DevGPT - Main" Height="850" Width="1100">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open Stores..." Click="LoadStoresButton_Click"/>
                <MenuItem Header="Open Agents..." Click="LoadAgentsButton_Click"/>
                <MenuItem Header="Open Flows..." Click="LoadFlowsButton_Click"/>
                <Separator/>
                <MenuItem Header="Save Stores" Click="SaveStoresButton_Click"/>
                <MenuItem Header="Save Agents" Click="SaveAgentsButton_Click"/>
                <MenuItem Header="Save Flows" Click="SaveFlowsButton_Click"/>
            </MenuItem>
            <MenuItem Header="Settings" Click="SettingsButton_Click"/>
        </Menu>
        <Grid>
            <TabControl x:Name="MainTab" Margin="5">
                <TabItem Header="Stores">
                    <!-- Minimalistische TextBox voor StoresDevGPTEditor -->
                    <TextBox x:Name="StoresDevGPTEditor"
                         Margin="5"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="15" />
                </TabItem>
                <TabItem Header="Agents">
                    <!-- Minimalistische TextBox voor AgentsDevGPTEditor -->
                    <TextBox x:Name="AgentsDevGPTEditor"
                         Margin="5"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="15" />
                </TabItem>
                <TabItem Header="Flows" x:Name="FlowsTab">
                    <DockPanel LastChildFill="True">
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="6,6,6,6">
                            <Button Name="ShowFlowsAsCardsButton" Click="ShowFlowsAsCardsButton_Click" Width="180" Height="28" Margin="0,0,10,0">Toon flows als cards</Button>
                            <!-- Andere bovenbalk-opties ... -->
                        </StackPanel>
                        <!-- Minimalistische TextBox voor FlowsDevGPTEditor -->
                        <TextBox x:Name="FlowsDevGPTEditor"
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas" FontSize="15" SpellCheck.IsEnabled="False"
                             HorizontalScrollBarVisibility="Auto"
                             Margin="5" />
                    </DockPanel>
                </TabItem>
            </TabControl>
            <DockPanel DockPanel.Dock="Bottom" LastChildFill="False" Margin="5">
                <Button Name="NewChatWindowButton" 
            Content="Open Chat Window" 
            Width="100" Height="30"
            FontSize="12"
            Margin="5,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            DockPanel.Dock="Right"
            Click="NewChatWindowButton_Click"  
            Visibility="{Binding IsChatVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
            IsEnabled="{Binding IsOpeningChat, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </DockPanel>
            <!-- Modal Overlay Grid -->
            <Grid x:Name="ModalOverlay" Visibility="{Binding IsOpeningChat, Converter={StaticResource BooleanToVisibilityConverter}}" Background="#80000000"
      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
      Panel.ZIndex="999">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Background="#FFF" CornerRadius="12" Padding="32,28,32,28">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Chatvenster wordt gestart..." HorizontalAlignment="Center" Margin="0,0,0,10" FontSize="16"/>
                            <ProgressBar IsIndeterminate="True" Height="18" Width="220"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
