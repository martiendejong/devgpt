<Window x:Class="DevGPT.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chatvenster" Height="600" Width="500" ResizeMode="CanResize">
    <DockPanel LastChildFill="True">
        <!-- Chat Output -->
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto" Margin="10,10,10,0" MinHeight="300" Height="340" Name="ChatScrollViewer">
            <TextBox Name="ChatHistoryTextBox" 
                     FontFamily="Consolas" 
                     FontSize="14" 
                     Background="#FAFAFA" 
                     BorderBrush="Transparent"
                     IsReadOnly="True"
                     TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     MinHeight="300"
                     />
        </ScrollViewer>
        <!-- Message Composer -->
        <StackPanel DockPanel.Dock="Bottom" Margin="10,0,10,10" Orientation="Horizontal">
            <TextBox Name="MessageEditor" Width="370" MinHeight="40" FontSize="14" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
            <Button Name="SendButton" Content="Verzend" Width="80" Margin="10,0,0,0" Click="SendButton_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
