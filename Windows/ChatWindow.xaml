<Window x:Class="DevGPT.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DevGPT"
        Title="Chatvenster" Height="600" Width="500" ResizeMode="CanResize" MinWidth="350" MinHeight="350">
    <Window.Resources>
        <!-- BoolToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" /> <!-- Chat output fills space -->
            <RowDefinition Height="Auto" /> <!-- Input always at bottom -->
        </Grid.RowDefinitions>

        <!-- Chat Output -->
        <ScrollViewer Name="ChatScrollViewer"
                      Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,8"
                      VerticalAlignment="Stretch">
            <ItemsControl Name="ChatMessagesList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:ChatDisplayMessage}">
                        <StackPanel Margin="0,2,0,2">
                            <Expander Header="Assistent bericht"
                                      IsExpanded="False"
                                      Visibility="{Binding IsAsyncOnMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock TextWrapping="Wrap" FontFamily="Consolas" FontSize="14"
                                           Text="{Binding Text}"/>
                            </Expander>
                            <TextBlock TextWrapping="Wrap" FontFamily="Consolas" FontSize="14"
                                       Text="{Binding Text}"
                                       Visibility="{Binding IsAsyncOnMessage, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Message Composer -->
        <DockPanel Grid.Row="1" LastChildFill="False">
            <TextBox Name="MessageEditor"
                     Width="320"
                     MinHeight="40"
                     FontSize="14"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     VerticalAlignment="Bottom"
                     Margin="0,0,8,0"/>
            <!-- Loader/Spinner Indicator -->
            <ProgressBar Name="SendingProgress"
                         Width="35"
                         Height="16"
                         Margin="0,0,8,0"
                         Visibility="Collapsed"
                         IsIndeterminate="True"
                         VerticalAlignment="Center" />
            <Button Name="SendButton"
                    Content="Verzend"
                    Width="80"
                    Click="SendButton_Click"
                    VerticalAlignment="Bottom"/>
        </DockPanel>
    </Grid>
</Window>
