<Window x:Class="DevGPT.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DevGPT"
        Title="Chat" Height="700" Width="700">
    <Window.Resources>
        <local:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/> <!-- Chat messages -->
            <RowDefinition Height="110"/> <!-- Input + agent switch + send + progress -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Chat Messages List -->
        <ScrollViewer Grid.Row="0" Grid.Column="0" Width="Auto" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch">
            <ListBox x:Name="ChatMessagesList" 
                     ItemsSource="{Binding Messages}"
                     Background="White"
                     BorderThickness="0"
                     IsSynchronizedWithCurrentItem="True"
                     Margin="10"
                     Width="Auto"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:ChatDisplayMessage}">
                        <Border MaxWidth="700" Width="Auto" HorizontalAlignment="Stretch" Margin="0,4,0,4" Padding="6,4,6,4" Background="#F7F9FB" CornerRadius="5">
                            <StackPanel Width="Auto" HorizontalAlignment="Stretch" Orientation="Vertical">
                                <TextBlock Width="Auto" HorizontalAlignment="Stretch" Text="{Binding Author}" FontWeight="Bold" FontSize="13" />
                                <TextBox Visibility="{Binding Text, Converter={StaticResource EmptyToVisibilityConverter}}" Width="Auto" HorizontalAlignment="Stretch" Text="{Binding Text}" TextWrapping="Wrap" FontSize="14" Background="#EFE" />
                                <TextBox Visibility="{Binding Response, Converter={StaticResource EmptyToVisibilityConverter}}" Width="Auto" HorizontalAlignment="Stretch" Text="{Binding Response}" TextWrapping="Wrap" FontSize="14" Background="#EEF" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <!-- Input, Agent Switch, Send Button, and ProgressBar below -->
        <Grid Grid.Row="1" Background="#f5f6f8" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="38"/><!-- Select agent/flow -->
                <RowDefinition Height="*"/><!-- Input controls: TextBox + Send -->
                <RowDefinition Height="Auto"/><!-- ProgressBar -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="AgentFlowSelector"
                      Grid.Row="0"
                      Grid.Column="0"
                      Margin="15,7,7,2"
                      Height="26"
                      FontSize="14"
                      ItemsSource="{Binding AgentsAndFlows}"
                      SelectedItem="{Binding AgentOrFlow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      VerticalAlignment="Center" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Kies agent of flow" Margin="2,10,15,0" FontSize="13" VerticalAlignment="Center" />

            <!-- Input controls (row 1) -->
            <TextBox x:Name="MessageEditor"
                     Grid.Row="1"
                     Grid.Column="0"
                     Margin="15,2,7,5"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     FontSize="15"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     MaxLines="4"
                     MinHeight="54"
                     Height="54"
                     VerticalScrollBarVisibility="Auto"/>
            <Button x:Name="StopButton"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="7,2,15,5"
                    Content="Stop"
                    Visibility="Hidden"
                    Width="80"
                    Height="54"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    FontWeight="Bold"
                    Click="StopButton_Click"/>
            <Button x:Name="SendButton"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="7,2,15,5"
                    Content="Send"
                    Width="80"
                    Height="54"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    FontWeight="Bold"
                    Click="SendButton_Click"/>
            <!-- ProgressBar onderaan (row 2) -->
            <ProgressBar x:Name="SendingProgress"
                         Grid.Row="2"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Height="8"
                         Margin="15,0,15,8"
                         IsIndeterminate="True"
                         Visibility="Collapsed"
                         VerticalAlignment="Bottom"
                         Foreground="#4198FF"
                         Background="#DFE6EF"/>
        </Grid>
    </Grid>
</Window>
