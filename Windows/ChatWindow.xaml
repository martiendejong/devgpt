<Window x:Class="DevGPT.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chatvenster" Height="600" Width="500" ResizeMode="CanResize" MinWidth="350" MinHeight="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" /> <!-- Chat output fills space -->
            <RowDefinition Height="Auto" /> <!-- Input always at bottom -->
        </Grid.RowDefinitions>

        <!-- Chat Output -->
        <ScrollViewer Name="ChatScrollViewer"
                      Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,8"
                      VerticalAlignment="Stretch">
            <TextBox Name="ChatHistoryTextBox" 
                     FontFamily="Consolas" 
                     FontSize="14" 
                     Background="#FAFAFA" 
                     BorderBrush="Transparent"
                     IsReadOnly="True"
                     TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     VerticalAlignment="Stretch"
                     />
        </ScrollViewer>

        <!-- Message Composer -->
        <DockPanel Grid.Row="1" LastChildFill="False">
            <TextBox Name="MessageEditor"
                     Width="320"
                     MinHeight="40"
                     FontSize="14"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     VerticalAlignment="Bottom"
                     Margin="0,0,8,0"/>
            <!-- Loader/Spinner Indicator -->
            <ProgressBar Name="SendingProgress"
                         Width="35"
                         Height="16"
                         Margin="0,0,8,0"
                         Visibility="Collapsed"
                         IsIndeterminate="True"
                         VerticalAlignment="Center" />
            <Button Name="SendButton"
                    Content="Verzend"
                    Width="80"
                    Click="SendButton_Click"
                    VerticalAlignment="Bottom"/>
        </DockPanel>
    </Grid>
</Window>
