<Window x:Class="DevGPT.StoresCardsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StoresCardsWindow" Height="500" Width="600" ResizeMode="CanResize">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="6">
            <Button Content="+ Nieuwe store" Click="AddNewStoreButton_Click" Margin="0,0,8,0" />
            <Button Content="Opslaan" Click="OpslaanButton_Click" Margin="0,0,8,0" />
            <Button Content="Annuleren" Click="AnnuleerButton_Click" />
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Cards}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding Name}" Margin="6" IsExpanded="True">
                            <Border BorderThickness="1" BorderBrush="#DDDDDD" Padding="10" CornerRadius="5">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Name:" Width="90"/> <TextBox Width="350" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Description:" Width="90"/>
                                        <TextBox Width="350" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Path:" Width="90"/>
                                        <TextBox Width="350" Text="{Binding Path, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="SubDirectory:" Width="90"/>
                                        <TextBox Width="350" Text="{Binding SubDirectory, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ExcludePattern:" Width="90"/>
                                        <TextBox Width="350" Text="{Binding ExcludePattern, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="FileFilters:" Width="90"/>
                                        <TextBox Width="350" Text="{Binding FileFilters, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True"/>
                                    </StackPanel>
                                    <Button Content="Verwijderen" Click="RemoveStoreCardButton_Click" CommandParameter="{Binding}" Margin="0,10,0,0" HorizontalAlignment="Right" Width="90"/>
                                </StackPanel>
                            </Border>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>
