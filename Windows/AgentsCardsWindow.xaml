<Window x:Class="DevGPT.AgentsCardsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DevGPT"
        Title="Agents Cards" Height="650" Width="900">
    <Window.Resources>
        <!-- Style for card-like appearance -->
        <Style TargetType="ListViewItem" x:Key="AgentListViewItemStyle">
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e6f2fd"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Border" x:Key="CardBorderStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#B8C6E4"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    <Grid Background="#f5f6f8" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Save and Cancel Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,16,8" Grid.Row="0">
            <Button x:Name="AddNewAgentButton"
                    Content="Toevoegen"
                    Width="100" Margin="6,0"
                    Click="AddNewAgentButton_Click"
                    HorizontalAlignment="Left"
                    Style="{StaticResource {x:Type Button}}"
                    />            
            <Button Content="Opslaan" Width="100" Margin="6,0" Click="OpslaanButton_Click" Background="#4198FF" Foreground="White" FontWeight="Bold"/>
            <Button Content="Annuleer" Width="96" Margin="6,0" Click="AnnuleerButton_Click"/>
        </StackPanel>

        <!-- Main Content: Agent Cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10,0,10,10">
            <ItemsControl x:Name="CardsPanel" ItemsSource="{Binding Cards}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorderStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                    <!-- Toggle Button (plus/min/arrow) -->
                                    <Button Width="22" Height="22" Margin="0,0,8,0" Padding="0"
                                            Click="ToggleAgentExpandButton_Click"
                                            ToolTip="Details weergeven/verbergen">
                                        <Button.Content>
                                            <ContentControl>
                                                <ContentControl.Style>
                                                    <Style TargetType="ContentControl">
                                                        <Setter Property="Content" Value="▶" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                                <Setter Property="Content" Value="▼" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ContentControl.Style>
                                            </ContentControl>
                                        </Button.Content>
                                    </Button>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center" />
                                    <Button Content="✖" CommandParameter="{Binding}" Click="RemoveAgentCardButton_Click" Width="24" Height="24" Margin="8,0,0,0" ToolTip="Verwijder agent" />
                                </StackPanel>
                                <!-- Details -->
                                <StackPanel Margin="24,8,0,0">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <Button Content="Verwijderen" Width="96" Margin="6,0" Click="RemoveAgentCardButton_Click"/>

                                    <!-- Name -->
                                    <TextBlock Text="Naam" FontWeight="Bold" FontSize="14"/>
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" FontSize="13" TextWrapping="Wrap"/>

                                    <!-- Description -->
                                    <TextBlock Text="Omschrijving" FontWeight="Bold" FontSize="14"/>
                                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" FontSize="13" AcceptsReturn="True" Height="48" TextWrapping="Wrap"/>

                                    <!-- Prompt -->
                                    <TextBlock Text="Prompt" FontWeight="Bold" FontSize="14"/>
                                    <TextBox Text="{Binding Prompt, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" FontSize="13" AcceptsReturn="True" Height="72" TextWrapping="Wrap"/>

                                    <!-- Stores -->
                                    <StackPanel>
                                        <TextBlock Text="Stores:" FontWeight="Bold" Margin="0,5,0,2"/>
                                        <ItemsControl ItemsSource="{Binding Stores}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <DockPanel Margin="0,0,0,4" LastChildFill="False">
                                                        <TextBlock Text="{Binding Name}" FontSize="13" MinWidth="100"/>
                                                        <CheckBox Content="Writable" IsChecked="{Binding Writable, Mode=TwoWay}" Margin="10,0"/>
                                                        <Button Content="Verwijder" Click="RemoveStoreButton_Click" CommandParameter="{Binding}" Margin="10,0,0,0"/>
                                                    </DockPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <ComboBox ItemsSource="{Binding DataContext.AllStores, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                              SelectedItem="{Binding NewStoreToAdd, Mode=TwoWay}" Width="150" Margin="0,0,6,0"/>
                                        <CheckBox Content="Writable" IsChecked="{Binding NewStoreWritable, Mode=TwoWay}" Margin="0,0,6,0"/>
                                        <Button Content="Toevoegen" CommandParameter="{Binding}" Click="AddStoreButton_Click"/>
                                    </StackPanel>

                                    <!-- Functions -->
                                    <TextBlock Text="Functions" FontWeight="Bold" FontSize="14"/>
                                    <ItemsControl ItemsSource="{Binding Functions}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <DockPanel Margin="0,0,0,4" LastChildFill="False">
                                                    <TextBlock Text="{Binding}" FontSize="13" MinWidth="120"/>
                                                    <Button Content="Verwijder" Click="RemoveFunctionButton_Click" CommandParameter="{Binding}" Margin="10,0,0,0"/>
                                                </DockPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <ComboBox ItemsSource="{Binding DataContext.AllFunctions, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                              SelectedItem="{Binding NewFunctionToAdd, Mode=TwoWay}" Width="180" Margin="0,0,6,0"/>
                                        <Button Content="Toevoegen" CommandParameter="{Binding}" Click="AddFunctionButton_Click"/>
                                    </StackPanel>

                                    <!-- CallsAgents -->
                                    <TextBlock Text="Calls Agents" FontWeight="Bold" FontSize="14"/>
                                    <ItemsControl ItemsSource="{Binding CallsAgents}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <DockPanel Margin="0,0,0,4" LastChildFill="False">
                                                    <TextBlock Text="{Binding}" FontSize="13" MinWidth="120"/>
                                                    <Button Content="Verwijder" Click="RemoveAgentButton_Click" CommandParameter="{Binding}" Margin="10,0,0,0"/>
                                                </DockPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <ComboBox ItemsSource="{Binding DataContext.AllAgents, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                              SelectedItem="{Binding NewAgentToAdd, Mode=TwoWay}" Width="180" Margin="0,0,6,0"/>
                                        <Button Content="Toevoegen" CommandParameter="{Binding}" Click="AddAgentButton_Click"/>
                                    </StackPanel>

                                    <!-- CallsFlows -->
                                    <TextBlock Text="Calls Flows" FontWeight="Bold" FontSize="14"/>
                                    <ItemsControl ItemsSource="{Binding CallsFlows}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <DockPanel Margin="0,0,0,4" LastChildFill="False">
                                                    <TextBlock Text="{Binding}" FontSize="13" MinWidth="120"/>
                                                    <Button Content="Verwijder" Click="RemoveFlowButton_Click" CommandParameter="{Binding}" Margin="10,0,0,0"/>
                                                </DockPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <ComboBox ItemsSource="{Binding DataContext.AllFlows, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                              SelectedItem="{Binding NewFlowToAdd, Mode=TwoWay}" Width="180" Margin="0,0,6,0"/>
                                        <Button Content="Toevoegen" CommandParameter="{Binding}" Click="AddFlowButton_Click"/>
                                    </StackPanel>

                                    <!-- ExplicitModify -->
                                    <CheckBox Content="Explicit Modify" IsChecked="{Binding ExplicitModify, Mode=TwoWay}" Margin="0,0,0,6"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
