<Window x:Class="DevGPT.App.ExplorerIntegration.EmbedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Embed Files" Height="220" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="File filters (comma-separated extensions):"/>
            <TextBox x:Name="FiltersBox" Margin="0,4,0,8"/>
            <TextBlock Text="OpenAI API Key:"/>
            <PasswordBox x:Name="KeyBox" Margin="0,4,0,4"/>
            <CheckBox x:Name="SaveKeyBox" Content="Save key in registry"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" IsCancel="True" Margin="0,0,8,0"/>
            <Button Content="Start" Width="100" IsDefault="True" Click="Start_Click"/>
        </StackPanel>
    </Grid>
</Window>


