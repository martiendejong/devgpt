<Window x:Class="NewWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- For button row -->
            <RowDefinition Height="*"/>   <!-- For main ListBox and content -->
            <RowDefinition Height="Auto"/> <!-- For error message -->
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button x:Name="SelectFileButton" Content="Select File" Width="100" Click="SelectFileButton_Click" />
        </StackPanel>
        <ListBox x:Name="EmbeddingKeysListBox" Grid.Row="1" Margin="0,0,0,10" />
        <TextBlock x:Name="ErrorMessageTextBlock" Grid.Row="2" Foreground="Red" Visibility="Collapsed"/>
    </Grid>
</Window>
