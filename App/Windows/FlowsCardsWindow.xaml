<Window x:Class="DevGPT.App.Windows.FlowsCardsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DevGPT.App.Windows"
        Title="Flows als Cards" Height="650" Width="800">
    <Window.Resources>
        <!-- Style voor drag-over highlight (item-level) -->
        <Style TargetType="ListViewItem" x:Key="AgentListViewItemStyle">
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e6f2fd"/>
                </Trigger>
                <!-- Highlight tijdens drag-over via attached property -->
                <Trigger Property="local:FlowsCardsWindow.IsDragOverItem" Value="True">
                    <Setter Property="Background" Value="#d0eaff"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="#f5f6f8" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Knoppen bovenaan rechts uitgelijnd, altijd zichtbaar -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,16,8" Grid.Row="0">
            <Button Content="Nieuwe flow toevoegen" Name="AddNewFlowButton" Width="150" Margin="6,0" Click="AddNewFlowButton_Click" Background="#42D781" Foreground="White" FontWeight="Bold"/>
            <Button Content="Opslaan" Width="100" Margin="6,0" Click="OpslaanButton_Click" Background="#4198FF" Foreground="White" FontWeight="Bold"/>
            <Button Content="Annuleer" Width="96" Margin="6,0" Click="AnnuleerButton_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10,0,10,10">
            <ItemsControl ItemsSource="{Binding Cards}" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" BorderBrush="#B8C6E4" BorderThickness="1" Padding="15" Margin="0,0,0,16" CornerRadius="10" >
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <!-- Toggle expand/collapse button -->
                                    <Button Width="24" Height="24" Padding="0" Margin="0,0,8,0"
                                            Click="ToggleExpandButton_Click"
                                            CommandParameter="{Binding}">
                                        <Button.Content>
                                            <ContentControl>
                                                <ContentControl.Style>
                                                    <Style TargetType="ContentControl">
                                                        <Setter Property="Content" Value="ÔûÂ" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                                <Setter Property="Content" Value="Ôû+" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ContentControl.Style>
                                            </ContentControl>
                                        </Button.Content>
                                    </Button>

                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" />
                                    <Button Content="Verwijderen" CommandParameter="{Binding}" Click="RemoveFlowCardButton_Click" Width="96" Margin="16,0,0,0" VerticalAlignment="Center" Height="28"/>
                                </StackPanel>

                                <!-- Details (conditionally shown with IsExpanded) -->
                                <StackPanel Margin="26,8,0,0">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <TextBlock Text="Naam" FontWeight="Bold" FontSize="14"/>
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" FontSize="13" TextWrapping="Wrap"/>
                                    <TextBlock Text="Omschrijving" FontWeight="Bold" FontSize="14"/>
                                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" FontSize="13" AcceptsReturn="True" Height="48" TextWrapping="Wrap"/>

                                    <TextBlock Text="Agents" FontWeight="Bold" FontSize="14"/>
                                    <!-- DragDrop handlers toegevoegd op ListView-->
                                    <ListView 
                                        ItemsSource="{Binding CallsAgents}"
                                        Height="80" 
                                        AllowDrop="True" 
                                        Margin="0,0,0,4"
                                        PreviewMouseLeftButtonDown="CallsAgentsListView_PreviewMouseLeftButtonDown"
                                        MouseMove="CallsAgentsListView_MouseMove"
                                        DragOver="CallsAgentsListView_DragOver"
                                        Drop="CallsAgentsListView_Drop">
                                        <ListView.ItemContainerStyle>
                                            <StaticResource ResourceKey="AgentListViewItemStyle" />
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" FontSize="13" TextWrapping="Wrap" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                    <!-- ComboBox is al correct gekoppeld aan AllAgents uit FlowCardsBindingModel (zie DataContext.AllAgents) -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <ComboBox ItemsSource="{Binding DataContext.AllAgents, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" SelectedItem="{Binding NewAgentToAdd, Mode=TwoWay}" Width="180" Height="24" Margin="0,0,6,0"/>
                                        <Button Content="Toevoegen" CommandParameter="{Binding}" Click="AddAgentButton_Click"/>
                                    </StackPanel>
                                </StackPanel>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>



